[
  {
    "id": "Collections",
    "widgetClass": "omna.management.DataGridRestService",
    "requestManagementClass": "omna.request.Collections",
    "reloadAfterRemove": true,
    "baseParams": {
      "with_details": true
    },
    "actions": [
      "omna.action.Reload",
      "omna.action.Separator",
      {
        "widgetClass": "omna.action.Install",
        "enablingRules": "status !== 'installed'"
      },
      {
        "widgetClass": "omna.action.Remove",
        "enablingRules": "status !== 'not_installed'"
      }
    ],
    "fields": [
      {
        "name": "name",
        "label": "logo",
        "cellRendererClass": "omna.table.cellrenderer.Logo",
        "showInGrid": true,
        "gridColumnWidth": 50
      },
      {
        "name": "title",
        "showInGrid": true,
        "gridColumnWidth": 200
      },
      {
        "name": "summary",
        "showInGrid": true
      },
      {
        "name": "version",
        "showInGrid": true,
        "gridColumnWidth": 150
      },
      {
        "name": "status",
        "cellRendererClass": "omna.table.cellrenderer.String",
        "showInGrid": true,
        "gridColumnWidth": 100,
        "gridRendererStyle": {
          "textAlign": "center",
          "conditions": [
            {
              "value": "outdated",
              "color": "#FFC107"
            },
            {
              "value": "installed",
              "color": "#007BFF"
            },
            {
              "value": "not_installed",
              "color": "#DC3545"
            }
          ]
        },
        "i18n": {
          "catalog": "Collections"
        }
      },
      {
        "name": "updated_at",
        "showInGrid": true,
        "cellRendererClass": "omna.table.cellrenderer.Date",
        "gridColumnWidth": 150
      },
      {
        "name": "installed_at",
        "showInGrid": true,
        "cellRendererClass": "omna.table.cellrenderer.Date",
        "gridColumnWidth": 150
      }
    ]
  }
]