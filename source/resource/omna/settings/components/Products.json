[
  {
    "id": "Products",
    "widgetClass": "omna.management.DataGridRestService",
    "requestManagementClass": "omna.request.Products",
    "rowHeight": 60,
    "formWidth": 800,
    "searchFormWidth": 400,
    "baseParams": {
      "with_details": false
    },
    "actions": [
      "omna.action.Reload",
      "omna.action.Separator",
      "omna.action.Add",
      "omna.action.Edit",
      "omna.action.Details",
      "omna.action.product.Variants",
      "omna.action.product.Integrations",
      "omna.action.Remove",
      "omna.action.Separator",
      "omna.action.Search"
    ],
    "fields": [
      {
        "name": "images",
        "widgetClass": "omna.form.field.grid.Gallery",
        "showInGrid": true,
        "includeInSearch": false,
        "accessInAddForm": "N",
        "accessInEditForm": "N",
        "gridColumnWidth": 60
      },
      {
        "name": "name",
        "widgetClass": "omna.form.field.TextField",
        "showInGrid": true,
        "includeInSearch": true,
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": true,
        "minLength": 2,
        "pattern": "^[^\\t\\s].*[^\\t\\s]$",
        "gridColumnWidth": 400
      },
      {
        "name": "price",
        "widgetClass": "omna.form.field.NumberField",
        "showInGrid": true,
        "includeInSearch": true,
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": true,
        "minimum": 0,
        "maximumFractionDigits": 2,
        "minimumFractionDigits": 2,
        "prefix": "$",
        "gridColumnWidth": 100
      },
      {
        "name": "variants",
        "widgetClass": "omna.form.field.NumberField",
        "showInGrid": true,
        "gridColumnWidth": 100,
        "gridRendererStyle": {
          "textAlign": "center"
        }
      },
      {
        "name": "integrations",
        "showInGrid": true,
        "cellRendererClass": "omna.table.cellrenderer.String",
        "cellClass": "integrations",
        "isTemplate": true,
        "isRichText": true,
        "i18n": {
          "subCatalog": "Titles",
          "name": "INTEGRATIONS"
        }
      },
      {
        "name": "integration",
        "includeInSearch": true,
        "attrModelName": "integration_id",
        "widgetClass": "omna.form.field.remote.integrations.SelectBox",
        "disableUnauthorized": false
      },
      {
        "name": "description",
        "widgetClass": "omna.form.field.TextArea",
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": true,
        "minLength": 3
      },
      {
        "name": "package",
        "label": "package_weight",
        "widgetClass": "omna.form.field.NumberField",
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": false,
        "minimum": 0,
        "maximumFractionDigits": 2,
        "minimumFractionDigits": 2,
        "postfix": " kg",
        "attrPath": "weight",
        "attrModelName": "package.weight"
      },
      {
        "name": "package",
        "label": "package_height",
        "widgetClass": "omna.form.field.NumberField",
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": false,
        "minimum": 0,
        "maximumFractionDigits": 2,
        "minimumFractionDigits": 2,
        "postfix": " cm",
        "attrPath": "height",
        "attrModelName": "package.height"
      },
      {
        "name": "package",
        "label": "package_length",
        "widgetClass": "omna.form.field.NumberField",
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": false,
        "minimum": 0,
        "maximumFractionDigits": 2,
        "minimumFractionDigits": 2,
        "postfix": " cm",
        "attrPath": "length",
        "attrModelName": "package.length"
      },
      {
        "name": "package",
        "label": "package_width",
        "widgetClass": "omna.form.field.NumberField",
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": false,
        "minimum": 0,
        "maximumFractionDigits": 2,
        "minimumFractionDigits": 2,
        "postfix": " cm",
        "attrPath": "width",
        "attrModelName": "package.width"
      },
      {
        "name": "package",
        "label": "package_content",
        "widgetClass": "omna.form.field.TextArea",
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": false,
        "attrPath": "content",
        "attrModelName": "package.content"
      },
      {
        "name": "package",
        "label": "package_overwrite",
        "widgetClass": "omna.form.field.LocalSelectBox",
        "accessInAddForm": "W",
        "accessInEditForm": "W",
        "required": true,
        "attrModelName": "package.overwrite",
        "i18n": "Products",
        "options": [
          {
            "value": false,
            "label": "not-overwrite-package-in-any-variants"
          },
          {
            "value": true,
            "label": "overwrite-package-in-all-variants"
          }
        ]
      }
    ]
  }
]