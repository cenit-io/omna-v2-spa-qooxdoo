    "searchFormWidth": 600,
    "baseParams": {
      "with_details": true
    },
    "actions": [
      "omna.action.Reload",
      "omna.action.Separator",
      "omna.action.Details",
      "omna.action.order.Documents",
      "omna.action.ReImport",
      "omna.action.order.Export",
      "omna.action.Cancel",
      "omna.action.Separator",
      "omna.action.Search"
    ],
    "fields": [
      {
        "name": "integration.channel",
        "label": "logo",
        "cellRendererClass": "omna.table.cellrenderer.Logo",
        "showInGrid": true,
        "sortable": false,
        "gridColumnWidth": 50
      },
      {
        "name": "number",
        "widgetClass": "omna.form.field.TextField",
        "showInGrid": true,
        "includeInSearch": true,
        "gridColumnWidth": 150
      },
      {
        "name": "total_price",
        "showInGrid": true,
        "cellRendererClass": "omna.table.cellrenderer.Number",
        "maximumFractionDigits": 2,
        "minimumFractionDigits": 2,
        "prefix": "$",
        "gridColumnWidth": 100
      },
      {
        "name": "total_quantity",
        "showInGrid": true,
        "gridColumnWidth": 110,
        "gridRendererStyle": {
          "textAlign": "center"
        }
      },
      {
        "name": "status",
        "widgetClass": "omna.form.field.TextField",
        "showInGrid": true,
        "includeInSearch": true,
        "gridColumnWidth": 100,
        "gridRendererStyle": {
          "textAlign": "center",
          "conditions": [
            {
              "value": "pending",
              "color": "#FFC107"
            },
            {
              "value": "completed",
              "color": "#007BFF"
            },
            {
              "operator": "/cancel/i",
              "color": "#DC3545"
            }
          ]
        }
      },
      {
        "name": "integration.id",
        "label": "integration",
        "showInGrid": true,
        "sortable": false,
        "isTemplate": true,
        "isRichText": true,
        "i18n": {
          "subCatalog": "Titles",
          "name": "INTEGRATION"
        },
        "includeInSearch": true,
        "widgetClass": "omna.form.field.remote.integrations.SelectBox",
        "customModelName": "integration_id",
        "disableUnauthorized": false
      },
      {
        "name": "last_import_date",
        "showInGrid": true,
        "cellRendererClass": "omna.table.cellrenderer.Date",
        "gridColumnWidth": 150
      },
      {
        "name": "created_date",
        "label": "created_at",
        "showInGrid": true,
        "cellRendererClass": "omna.table.cellrenderer.Date",
        "gridColumnWidth": 150
      },
      {
        "name": "updated_date",
        "label": "updated_at",
        "showInGrid": true,
        "cellRendererClass": "omna.table.cellrenderer.Date",
        "gridColumnWidth": 150
      }
    ]
